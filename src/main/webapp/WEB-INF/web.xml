<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>PAW</display-name>

	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.LoginController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SignUpController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.SignUpController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogOutController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.LogOutController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Restaurants</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.Restaurants</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RestaurantDetail</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.RestaurantDetail</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminPanelController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.AdminPanelController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ManagerPanelController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.ManagerPanelController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewManagerController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.NewManagerController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewRestaurantController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.NewRestaurantController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OrderController</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.controller.OrderController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SignUpController</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogOutController</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/css/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Restaurants</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestaurantDetail</servlet-name>
		<url-pattern>/restaurant</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminPanelController</servlet-name>
		<url-pattern>/adminPanel</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagerPanelController</servlet-name>
		<url-pattern>/managerPanel</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewManagerController</servlet-name>
		<url-pattern>/newManager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewRestaurantController</servlet-name>
		<url-pattern>/newRestaurant</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OrderController</servlet-name>
		<url-pattern>/order</url-pattern>
	</servlet-mapping>
</web-app>